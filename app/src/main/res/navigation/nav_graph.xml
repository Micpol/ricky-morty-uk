<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph.xml"
    app:startDestination="@id/episodesFragment">

    <fragment
        android:id="@+id/episodesFragment"
        android:name="com.uk.androidrecruitmentapp.feature.episodes.EpisodesFragment"
        android:label="EpisodesFragment" >
        <action
            android:id="@+id/action_episodesFragment_to_charactersFragment"
            app:destination="@id/charactersFragment" />
    </fragment>
    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.uk.androidrecruitmentapp.feature.characters.CharactersFragment"
        android:label="CharactersFragment" >
        <action
            android:id="@+id/action_charactersFragment_to_locationsFragment"
            app:destination="@id/locationsFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.uk.androidrecruitmentapp.feature.locations.LocationsFragment"
        android:label="LocationsFragment" />
</navigation>